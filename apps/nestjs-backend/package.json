{
  "name": "nestjs-backend",
  "version": "0.0.1",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "start:dev:infra": "docker-compose up -d",
    "stop:dev:infra": "docker-compose down",
    "restart:dev:infra": "pnpm stop:dev:infra && pnpm start:dev:infra",
    "lint": "xo",
    "lint:fix": "xo --fix",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --passWithNoTests",
    "migration:create": "npx mikro-orm migration:create",
    "migration:up": "npx mikro-orm migration:up",
    "migration:down": "npx mikro-orm migration:down",
    "docker:build": "cd ../.. && docker build -t nestjs-backend -f apps/nestjs-backend/dockerfile .",
    "docker:start:dev": "docker run -p 4000:4000 --env-file .env -e POSTGRES_HOST=host.docker.internal -e MAIL_HOST=host.docker.internal nestjs-backend"
  },
  "dependencies": {
    "@mikro-orm/core": "6.4.16",
    "@mikro-orm/migrations": "6.4.16",
    "@mikro-orm/nestjs": "6.1.1",
    "@mikro-orm/postgresql": "6.4.16",
    "@nestjs-modules/mailer": "2.0.2",
    "@nestjs/axios": "4.0.0",
    "@nestjs/bull": "^11.0.2",
    "@nestjs/common": "11.1.3",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "11.1.3",
    "@nestjs/jwt": "11.0.0",
    "@nestjs/mapped-types": "2.1.0",
    "@nestjs/passport": "11.0.5",
    "@nestjs/platform-express": "11.1.3",
    "@nestjs/schedule": "6.0.0",
    "@nestjs/swagger": "11.2.0",
    "@nestjs/terminus": "11.0.0",
    "@nestjs/throttler": "6.4.0",
    "@titan/shared": "workspace:*",
    "@types/fluent-ffmpeg": "^2.1.27",
    "axios": "1.10.0",
    "bcrypt": "6.0.0",
    "bull": "^4.16.5",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.2",
    "cookie-parser": "1.4.7",
    "dotenv": "17.0.1",
    "express": "5.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "handlebars": "4.7.8",
    "helmet": "8.1.0",
    "joi": "17.13.3",
    "nodemailer": "7.0.4",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.2",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@mikro-orm/cli": "6.4.16",
    "@nestjs/cli": "11.0.7",
    "@nestjs/schematics": "11.0.5",
    "@nestjs/testing": "11.1.3",
    "@types/bcrypt": "5.0.2",
    "@types/cookie-parser": "1.4.9",
    "@types/express": "5.0.3",
    "@types/hapi__joi": "17.1.15",
    "@types/jest": "30.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "22.16.0",
    "@types/passport-jwt": "4.0.1",
    "@types/supertest": "6.0.3",
    "eslint": "9.30.1",
    "jest": "30.0.4",
    "jest-mock-extended": "4.0.0",
    "source-map-support": "0.5.21",
    "supertest": "7.1.1",
    "ts-jest": "29.4.0",
    "ts-loader": "9.5.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.8.3",
    "xo": "1.1.1"
  },
  "packageManager": "npm@11.4.2",
  "xo": {
    "rules": {
      "import-x/extensions": "off",
      "@typescript-eslint/parameter-properties": "off",
      "@typescript-eslint/no-unsafe-assignment": "off",
      "@typescript-eslint/no-unsafe-call": "off",
      "@typescript-eslint/no-unsafe-return": "off",
      "@typescript-eslint/no-unsafe-argument": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/class-literal-property-style": "off",
      "@typescript-eslint/prefer-nullish-coalescing": "off",
      "@typescript-eslint/naming-convention": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/member-ordering": "off",
      "@typescript-eslint/ban-types": "off",
      "@typescript-eslint/no-restricted-types": "off",
      "@typescript-eslint/switch-exhaustiveness-check": "off",
      "@typescript-eslint/only-throw-error": "off",
      "@typescript-eslint/return-await": "off",
      "@typescript-eslint/consistent-type-assertions": "off",
      "@typescript-eslint/restrict-template-expressions": "off",
      "@stylistic/max-len": ["error", { 
        "code": 200, 
        "ignoreUrls": true, 
        "ignoreStrings": true, 
        "ignoreTemplateLiterals": true,
        "ignoreRegExpLiterals": true
      }],
      "@stylistic/no-mixed-operators": "off",
      "@stylistic/max-statements-per-line": "off",
      "new-cap": "off",
      "n/prefer-global/process": "off",
      "n/prefer-global/buffer": "off",
      "no-warning-comments": "off",
      "max-params": "off",
      "radix": "off",
      "no-await-in-loop": "off",
      "no-promise-executor-return": "off",
      "import-x/order": "off",
      "unicorn/prevent-abbreviations": ["error", {
        "allowList": {
          "e": true,
          "params": true,
          "req": true,
          "res": true,
          "ctx": true,
          "dto": true,
          "Dto": true,
          "util": true,
          "dir": true,
          "Dir": true,
          "createDirDto": true,
          "configKey": true,
          "ConfigKey": true,
          "param": true,
          "Param": true
        }
      }]
    }
  }
}
